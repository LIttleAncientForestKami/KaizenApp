<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.text.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="400.0" prefWidth="600.0"
	xmlns="http://javafx.com/javafx/8.0.66" xmlns:fx="http://javafx.com/fxml/1"
	fx:controller="com.agh.mbulawa.view.AddIdeaLayoutController">
	<children>
		<BorderPane prefHeight="400.0" prefWidth="600.0"
			AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
			AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
			<center>
				<TextArea fx:id="contentArea" prefHeight="200.0" prefWidth="200.0"
					BorderPane.alignment="TOP_CENTER" />
			</center>
			<left>
				<VBox alignment="TOP_CENTER" BorderPane.alignment="CENTER">
					<children>
						<Label alignment="CENTER" contentDisplay="CENTER" text="Kategoria">
							<font>
								<Font size="20.0" />
							</font>
						</Label>
						<ComboBox fx:id="categoryCombokBox" prefWidth="150.0" />
						<Label text="Nazwa">
							<font>
								<Font size="20.0" />
							</font>
						</Label>
						<TextField fx:id="nameField" />
					</children>
				</VBox>
			</left>
			<top>
				<Label text="Dodaj Pomysł. Bądź Kreatywny!"
					BorderPane.alignment="CENTER">
					<font>
						<Font size="31.0" />
					</font>
				</Label>
			</top>
			<bottom>
				<Label text="System Kazizen - każdy może coś od siebie dać!"
					BorderPane.alignment="CENTER" />
			</bottom>
			<right>
				<VBox alignment="BOTTOM_CENTER">
					<children>
						<ButtonBar prefHeight="40.0" prefWidth="154.0">
							<buttons>
								<Button mnemonicParsing="false" onAction="#handleOK"
									text="OK" />
								<Button mnemonicParsing="false" onAction="#handleExit"
									text="Anuluj" />
							</buttons>
						</ButtonBar>
					</children>
				</VBox>
			</right>
		</BorderPane>
	</children>
</AnchorPane>
