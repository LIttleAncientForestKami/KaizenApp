<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.chart.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.BorderPane?>

<AnchorPane focusTraversable="true" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.72" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.agh.mbulawa.view.IdeaStatisticsController">
	<children>
      <VBox prefHeight="200.0" prefWidth="160.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
      		<ScrollPane fitToHeight="true" fitToWidth="true">
      			<contextMenu>
      				<ContextMenu fx:id="menu">
      					<items>
      						<MenuItem fx:id="item" mnemonicParsing="false" onAction="#handleSaveChartImage" text="Zapisz obraz wykresu" />
      					</items>
      				</ContextMenu>
      			</contextMenu>
               <content>
                  <TilePane>
                     <children>
                        <BarChart fx:id="ideaBar" title="Ilość pomysłów" verticalGridLinesVisible="false">
                          <xAxis>
                            <CategoryAxis label="Nazwiska" side="BOTTOM" tickLabelRotation="-90.0" fx:id="xAxis" />
                          </xAxis>
                          <yAxis>
                            <NumberAxis fx:id="yAxis" side="LEFT" />
                          </yAxis>
                        </BarChart>
                     </children>
                  </TilePane>
               </content>
      		</ScrollPane>
            <HBox>
               <children>
                  <Label text="OD">
                     <HBox.margin>
                        <Insets right="10.0" top="5.0" />
                     </HBox.margin>
                  </Label>
                  <DatePicker fx:id="fromDatePicker" />
                  <Label text="DO">
                     <HBox.margin>
                        <Insets left="10.0" right="10.0" top="5.0" />
                     </HBox.margin>
                  </Label>
                  <DatePicker fx:id="toDatePicker" layoutX="38.0" layoutY="10.0" />
                  <Button mnemonicParsing="false" onAction="#handleShowByDate" text="Pokaż">
                     <HBox.margin>
                        <Insets left="10.0" />
                     </HBox.margin>
                  </Button>
               </children>
               <padding>
                  <Insets left="10.0" right="10.0" />
               </padding>
            </HBox>
         </children>
      </VBox>
	</children>
</AnchorPane>
