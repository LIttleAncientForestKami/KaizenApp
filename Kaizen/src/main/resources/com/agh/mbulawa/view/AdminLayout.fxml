<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.BorderPane?>

<AnchorPane prefHeight="600.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.72" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.agh.mbulawa.view.AdminLayoutController">
   <children>
      <BorderPane prefHeight="600.0" prefWidth="600.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <center>
            <TabPane prefHeight="200.0" prefWidth="200.0" side="LEFT" tabClosingPolicy="UNAVAILABLE" BorderPane.alignment="CENTER">
              <tabs>
                <Tab text="ListaPracowników">
                  <content>
                    <AnchorPane>
                           <children>
                              <VBox alignment="CENTER" prefHeight="575.0" prefWidth="571.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                                 <children>
                                    <HBox alignment="CENTER" spacing="10.0">
                                       <children>
                                          <Button fx:id="showIdeasButton" mnemonicParsing="false" onAction="#handleShowUserIdeas" text="Wyświetl Pomysły Pracownika" />
                                          <Button mnemonicParsing="false" onAction="#handleAddUser" text="Dodaj Pracownika" />
                                          <Button fx:id="editUserButton" mnemonicParsing="false" onAction="#handlaEditUser" text="Edytuj Pracownika" />
                                          <Button fx:id="delUserButton" mnemonicParsing="false" onAction="#handleRemoveUser" text="Usuń Pracownika" />
                                       </children>
                                    </HBox>
                                    <TableView fx:id="usersTable" VBox.vgrow="ALWAYS">
                                      <columns>
                                        <TableColumn fx:id="userRowNumberColumn" prefWidth="40.0" resizable="false" text="Lp" />
                                        <TableColumn fx:id="firstNameColumn" prefWidth="162.0" resizable="false" text="IMIĘ" />
                                          <TableColumn fx:id="lastNameColumn" prefWidth="112.0" resizable="false" text="NAZWISKO" />
                                          <TableColumn fx:id="loginColumn" prefWidth="122.0" resizable="false" text="LOGIN" />
                                          <TableColumn fx:id="amountOfIdeasColumn" prefWidth="134.0" resizable="false" text="ILOŚĆ POMYSŁÓW" />
                                      </columns>
                                       <columnResizePolicy>
                                          <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                                       </columnResizePolicy>
                                    </TableView>
                                 </children>
                              </VBox>
                           </children>
                        </AnchorPane>
                  </content>
                </Tab>
                <Tab text="Lista Pomysłów">
                  <content>
                    <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                           <children>
                              <VBox prefHeight="555.0" prefWidth="571.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                                 <children>
                                    <HBox alignment="CENTER" spacing="10.0">
                                       <children>
                                          <Button fx:id="editIdeaButton" mnemonicParsing="false" onAction="#handleEditIdea" text="Edytuj Pomysł" />
                                          <Button fx:id="delIdeaButton" mnemonicParsing="false" onAction="#handleRemoveIdea" text="Usuń Pomysł" />
                                          <Button fx:id="changeIdeaStatusButton" layoutX="203.0" layoutY="10.0" mnemonicParsing="false" onAction="#handleChangeIdeaStatus" text="Zmień Status Pomysłu" />
                                          <ChoiceBox fx:id="statusChoiceBox" prefWidth="150.0" />
                                       </children>
                                    </HBox>
                                    <TableView fx:id="ideasTable" VBox.vgrow="ALWAYS">
                                      <columns>
                                        <TableColumn fx:id="ideaRowNumberColumn" prefWidth="30.0" text="LP" />
                                        <TableColumn fx:id="nameColumn" minWidth="45.0" prefWidth="56.0" text="NAZWA" />
                                          <TableColumn fx:id="categoryColumn" prefWidth="85.0" text="KATEGORIA" />
                                          <TableColumn fx:id="addDateColumn" prefWidth="120.0" text=" DATA DODANIA" />
                                          <TableColumn fx:id="editDateColumn" prefWidth="100.0" text=" DATA EDYCJI" />
                                          <TableColumn fx:id="statusColumn" prefWidth="70.0" text="STATUS" />
                                          <TableColumn fx:id="authorColumn" prefWidth="110.0" text=" ID PRACOWNIKA" />
                                      </columns>
                                    </TableView>
                                 </children>
                              </VBox>
                           </children>
                        </AnchorPane>
                  </content>
                </Tab>
              </tabs>
            </TabPane>
         </center>
         <top>
            <StackPane>
               <children>
                  <HBox alignment="CENTER" spacing="10.0">
                     <children>
                        <Button mnemonicParsing="false" onAction="#handleStatistics" text="Wyświetl Statystyki" />
                        <Button layoutX="252.0" layoutY="10.0" mnemonicParsing="false" onAction="#handleAddAdmin" text="Dodaj Konto Administratora" />
                        <Button mnemonicParsing="false" onAction="#handleExport" text="Eksportuj Listę Pracowników" />
                     </children>
                     <StackPane.margin>
                        <Insets bottom="10.0" top="10.0" />
                     </StackPane.margin>
                  </HBox>
               </children>
            </StackPane>
         </top>
         <bottom>
            <Button mnemonicParsing="false" onAction="#handleLogout" text="Wyloguj" BorderPane.alignment="CENTER" />
         </bottom>
      </BorderPane>
      <ProgressIndicator fx:id="indicator" prefHeight="600.0" prefWidth="600.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" />
   </children>
</AnchorPane>
